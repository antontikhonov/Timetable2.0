<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/timetableFragment">

    <fragment
        android:id="@+id/timetableFragment"
        android:name="site.antontikhonov.android.timetableistu.ui.screen.timetable.TimetableFragment"
        android:label="@string/timetable"
        tools:layout="@layout/fragment_timetable" />
    <action
        android:id="@+id/action_global_timetableFragment"
        app:destination="@id/timetableFragment" />

    <fragment
        android:id="@+id/chatFragment"
        android:name="site.antontikhonov.android.timetableistu.ui.screen.chat.ChatFragment"
        android:label="@string/chat"
        tools:layout="@layout/fragment_chat" />
    <action
        android:id="@+id/action_global_chatFragment"
        app:destination="@id/chatFragment" />

    <fragment
        android:id="@+id/newsFragment"
        android:name="site.antontikhonov.android.timetableistu.ui.screen.news.NewsFragment"
        android:label="@string/news"
        tools:layout="@layout/fragment_news" />
    <action
        android:id="@+id/action_global_newsFragment"
        app:destination="@id/newsFragment" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="site.antontikhonov.android.timetableistu.ui.screen.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_themeFragment"
            app:destination="@id/themeFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_settingsFragment"
        app:destination="@id/settingsFragment" />
    <fragment
        android:id="@+id/themeFragment"
        android:name="site.antontikhonov.android.timetableistu.ui.screen.theme.ThemeFragment"
        android:label="ThemeFragment" />
</navigation>