<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round">

    <TextView
        android:id="@+id/pairNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/evenClass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1. 8:30 - 10:00"
        tools:textColor="@color/black" />

    <TextView
        android:id="@+id/oddClass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/decoration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pairNumber"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="(практ) Экономика электропотребления Булат, 1-324"
        tools:textColor="@color/black" />

    <View
        android:id="@+id/decoration"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:background="@color/dirty_yellow"
        app:layout_constraintBottom_toTopOf="@id/evenClass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pairNumber"
        app:layout_constraintTop_toBottomOf="@id/oddClass" />

    <TextView
        android:id="@+id/evenClass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pairNumber"
        app:layout_constraintTop_toBottomOf="@+id/decoration"
        tools:text="(л/р) Электрический привод Булат, 1-309"
        tools:textColor="@color/black" />
</androidx.constraintlayout.widget.ConstraintLayout>